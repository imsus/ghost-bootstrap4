{{!< default}}
{{> header}}

{{#author}}
  <section class="bg-light pt-4 pb-4">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-7">
          <div class="card">
            <div class="card-body row">
              <div class="col-md-2">
                <img class="lozad mb-4" data-src="{{profile_image}}" alt="Picture of {{name}}" width="73" width="73">
              </div>
              <div class="col-md-10">
                <h4 class="card-title"><a class="text-dark" href="{{url}}">{{name}}</a></h4>
                <h6 class="card-subtitle mb-2 text-muted">{{location}}</h6>
                <p class="card-text">{{bio}}</p>
                <a class="text-dark card-link" href="{{website}}" data-toggle="tooltip" data-placement="bottom" title="Go to {{website}}">Website</a>
                <a class="text-dark card-link" href="{{facebook_url}}" data-toggle="tooltip" data-placement="bottom" title="{{facebook}}">Facebook</a>
                <a class="text-dark card-link" href="{{twitter_url}}" data-toggle="tooltip" data-placement="bottom" title="{{twitter}}">Twitter</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/author}}

<div class="container mt-5 mb-5">
  <div class="row justify-content-md-center mb-4">
    <div class="col-sm-7">
      {{#foreach posts}}
      <article class="{{post_class}} mb-5">
        <header class="post-header mb-4">
          {{#if feature_image}}<a href="{{url}}"><img class="img-fluid mb-4 lozad d-block bg-light" data-src="{{img_url feature_image}}" width="635" height="334" alt="Featured image for article with title: {{title}}" style="min-height: 193px"></a>{{/if}}
          <h2><a href="{{url}}">{{title}}</a></h2>
          <div>
            {{#if author.profile_image}}<img class="align-middle" src="{{author.profile_image}}" alt="Author image" width="18" height="18" />{{/if}}
            <span class="align-middle">{{#author}} <a class="text-dark" href="{{url}}">{{name}}</a> {{/author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></span>
          </div>
        </header>
        <section class="post-excerpt">
          <div>
            <p>{{excerpt words="30"}}&hellip;</p>
            <div class="d-flex align-items-end justify-content-between">
              <div>
                <small class="d-block">Tagged in:</small>
                {{#if featured}}<span class="badge badge-warning align-middle">Featured</span>{{/if}}
                {{#foreach tags}}
                  <span class="badge badge-dark align-middle"><a class="text-white" href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a></span>
                {{/foreach}}
              </div>
              <a class="btn btn-outline-dark" href="{{url}}" role="button">Read More</a>
            </div>
          </div>
        </section>
      </article>
      {{/foreach}}
    </div>
  </div>
  {{pagination}}
</div>